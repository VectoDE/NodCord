<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tags</title>
    <link rel="shortcut icon" href="/assets/img/logo.png" type="image/x-icon">
    <link rel="stylesheet" href="/assets/css/styles.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="https://unpkg.com/@merakiui/merakiui/dist/merakiui.min.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-200 text-gray-900 dark:bg-gray-800 dark:text-gray-200 flex">
    <%- include('../../partials/dashboardHeader'); %>

    <!-- Main Content -->
    <main class="flex-1 ml-64 lg:ml-72 p-6 space-y-8 overflow-auto">
      <div class="container mx-auto">
        <!-- Title and Create Button -->
        <div class="flex justify-between items-center mb-6">
          <h1 class="text-3xl font-semibold">Tags</h1>
          <a href="/dashboard/tags/create" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded shadow-md transition duration-300">
            <i class="bi bi-plus-circle"></i> Create New Tag
          </a>
        </div>

        <!-- Tags Table -->
        <div class="bg-white dark:bg-gray-900 shadow-md rounded-lg overflow-hidden">
          <table class="min-w-full bg-white dark:bg-gray-900">
            <thead>
              <tr class="w-full bg-gray-200 dark:bg-gray-800">
                <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Tag ID</th>
                <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Name</th>
                <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Actions</th>
              </tr>
            </thead>
            <tbody class="text-gray-700 dark:text-gray-200">
              <% if (tags && tags.length > 0) { %>
                <% tags.forEach(tag => { %>
                  <tr class="border-t border-gray-200 dark:border-gray-700">
                    <td class="py-3 px-4"><%= tag._id %></td>
                    <td class="py-3 px-4"><%= tag.name %></td>
                    <td class="py-3 px-4 flex space-x-2">
                      <a href="/dashboard/tags/<%= tag._id %>/edit" class="text-yellow-500 hover:text-yellow-700 transition duration-300">
                        <i class="bi bi-pencil-square"></i> Edit
                      </a>
                      <form action="<%= api.https %>://<%= api.baseURL %><% if (process.env.NODE_ENV === 'development') { %>:<%= api.port %><% } %>/api/tags/delete/<%= tag._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this tag?');">
                        <button type="submit" class="text-red-500 hover:text-red-700 transition duration-300">
                          <i class="bi bi-trash"></i> Delete
                        </button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="3" class="text-center py-3 px-4 text-gray-500 dark:text-gray-400">No tags found.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </main>
  </body>
</html>
