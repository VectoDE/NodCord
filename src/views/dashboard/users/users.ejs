<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Users</title>
    <link rel="shortcut icon" href="<%= logoImage %>" type="image/x-icon">
    <link rel="stylesheet" href="assets/css/styles.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-200 text-gray-900 dark:bg-gray-800 dark:text-gray-200 flex">
    <%- include('../../partials/dashboardHeader'); %>

    <!-- Main Content -->
    <main class="flex-1 ml-64 lg:ml-72 p-6 space-y-8 overflow-auto">
      <div class="container mx-auto">
        <!-- Title -->
        <div class="flex justify-between items-center mb-6">
          <h1 class="text-3xl font-semibold">Users</h1>
          <a href="/dashboard/users/create" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded shadow-md transition duration-300">
            <i class="bi bi-plus-circle"></i> Create New User
          </a>
        </div>

        <!-- Users Table -->
        <div class="bg-white dark:bg-gray-900 shadow-md rounded-lg overflow-hidden">
          <table class="min-w-full bg-white dark:bg-gray-900">
            <thead>
              <tr class="w-full bg-gray-200 dark:bg-gray-800">
                <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Username</th>
                <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Full Name</th>
                <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Email</th>
                <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Role</th>
                <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Verified</th>
                <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Last Activity</th>
                <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Social Links</th>
                <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Actions</th>
              </tr>
            </thead>
            <tbody class="text-gray-700 dark:text-gray-200">
              <% if (users && users.length > 0) { %>
                <% users.forEach(user => { %>
                  <tr class="border-t border-gray-200 dark:border-gray-700">
                    <td class="py-3 px-4"><%= user.username %></td>
                    <td class="py-3 px-4"><%= user.fullname %></td>
                    <td class="py-3 px-4"><%= user.email %></td>
                    <td class="py-3 px-4">
                      <%
                        // Format Role Name
                        const formattedRole = user.role.charAt(0).toUpperCase() + user.role.slice(1).toLowerCase();
                        let roleClass = '';

                        // Assign colors based on role
                        switch (user.role.toLowerCase()) {
                          case 'admin':
                            roleClass = 'text-red-500';
                            break;
                          case 'moderator':
                            roleClass = 'text-green-500';
                            break;
                          case 'developer':
                            roleClass = 'text-purple-500';
                            break;
                          case 'content':
                            roleClass = 'text-green-200';
                            break;
                          case 'supporter':
                            roleClass = 'text-yellow-500';
                            break;
                          case 'premium':
                            roleClass = 'text-orange-600';
                            break;
                          case 'vip':
                            roleClass = 'text-violet-300';
                            break;
                          default:
                            roleClass = 'text-gray-500';
                            break;
                        }
                      %>
                      <span class="<%= roleClass %>"><%= formattedRole %></span>
                    </td>
                    <td class="py-3 px-4">
                      <%= user.isVerified ? 'Yes' : 'No' %>
                    </td>
                    <td class="py-3 px-4"><%= new Date(user.recentActivity).toLocaleString() %></td>
                    <td class="py-3 px-4">
                      <div class="flex space-x-2">
                        <% if (user.socialLinks.google) { %>
                          <a href="<%= user.socialLinks.google %>" target="_blank" class="text-pink-600 hover:text-pink-800 transition duration-300">
                            <i class="bi bi-google"></i>
                          </a>
                        <% } %>
                        <% if (user.socialLinks.github) { %>
                          <a href="<%= user.socialLinks.github %>" target="_blank" class="text-gray-800 hover:text-gray-900 transition duration-300">
                            <i class="bi bi-github"></i>
                          </a>
                        <% } %>
                        <% if (user.socialLinks.apple) { %>
                          <a href="<%= user.socialLinks.apple %>" target="_blank" class="text-indigo-600 hover:text-indigo-800 transition duration-300">
                            <i class="bi bi-apple"></i>
                          </a>
                        <% } %>
                      </div>
                    </td>
                    <td class="py-3 px-4 flex space-x-2">
                      <a href="/dashboard/users/<%= user._id %>/edit" class="text-blue-500 hover:text-blue-700 transition duration-300">
                        <i class="bi bi-pencil-square"></i> Edit
                      </a>
                      <form action="/api/users/delete/<%= user._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this user?');">
                        <button type="submit" class="text-red-500 hover:text-red-700 transition duration-300">
                          <i class="bi bi-trash"></i> Delete
                        </button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="8" class="text-center py-3 px-4 text-gray-500 dark:text-gray-400">No users found.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </main>
  </body>
</html>
