<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Returns</title>
  <link rel="shortcut icon" href="<%= logoImage %>" type="image/x-icon">
  <link rel="stylesheet" href="/assets/css/styles.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-200 text-gray-900 dark:bg-gray-800 dark:text-gray-200 flex">
  <%- include('../../partials/dashboardHeader'); %>

  <!-- Main Content -->
  <main class="flex-1 ml-64 lg:ml-72 p-6 space-y-8 overflow-auto">
    <div class="container mx-auto">
      <!-- Title -->
      <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-semibold">Returns Overview</h1>
        <a href="/dashboard/returns/create" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded shadow-md transition duration-300">
          <i class="bi bi-plus-circle"></i> Create New Return
        </a>
      </div>

      <!-- Returns Table -->
      <div class="bg-white dark:bg-gray-900 shadow-md rounded-lg overflow-hidden">
        <table class="min-w-full bg-white dark:bg-gray-900">
          <thead>
            <tr class="w-full bg-gray-200 dark:bg-gray-800">
              <th class="text-left py-3 px-4 uppercase font-semibold text-sm">ID</th>
              <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Order ID</th>
              <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Reason</th>
              <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Date</th>
              <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Actions</th>
            </tr>
          </thead>
          <tbody class="text-gray-700 dark:text-gray-200">
            <% if (returns && returns.length > 0) { %>
              <% returns.forEach(returnItem => { %>
                <tr class="border-t border-gray-200 dark:border-gray-700 hover:bg-gray-100 dark:hover:bg-gray-700">
                  <td class="py-3 px-4"><%= returnItem.id %></td>
                  <td class="py-3 px-4"><%= returnItem.orderId %></td>
                  <td class="py-3 px-4"><%= returnItem.reason %></td>
                  <td class="py-3 px-4"><%= new Date(returnItem.date).toLocaleDateString() %></td>
                  <td class="py-3 px-4 flex space-x-2">
                    <a href="/dashboard/returns/edit/<%= returnItem.id %>" class="text-blue-500 hover:text-blue-700 transition duration-300">
                      <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <form action="<%= api.https %>://<%= api.baseURL %><% if (process.env.NODE_ENV === 'development') { %>:<%= api.port %><% } %>/api/returns/delete/<%= returnItem.id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this return?');">
                      <button type="submit" class="text-red-500 hover:text-red-700 transition duration-300">
                        <i class="bi bi-trash"></i> Delete
                      </button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="5" class="text-center py-3 px-4 text-gray-500 dark:text-gray-400">No returns found.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </main>
</body>
</html>
