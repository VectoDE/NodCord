<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NodCord - Dashboard</title>
  <link rel="shortcut icon" href="/assets/img/logo.png" type="image/x-icon">
  <link rel="stylesheet" href="/assets/css/styles.css">
  <style>
    main {
      flex: 1;
      padding: 20px;
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    h2 {
      margin-top: 0;
      font-size: 2rem;
      color: #333;
    }

    section {
      background: #fff;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      padding: 20px;
    }

    h3 {
      margin-top: 0;
      font-size: 1.5rem;
      color: #333;
    }

    .grid-container {
      display: grid;
      grid-template-columns: repeat(5, 1fr);
      gap: 20px;
    }

    .grid-item {
      background: #f9f9f9;
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 10px;
      text-align: center;
    }

    .grid-item h4 {
      margin: 0;
      font-size: 1.2rem;
      color: #333;
    }

    .grid-item p {
      margin: 5px 0 0;
      font-size: 1rem;
      color: #555;
    }

    form {
      display: flex;
      gap: 10px;
      margin-bottom: 20px;
    }

    button {
      background-color: #007bff;
      color: #fff;
      border: none;
      padding: 10px 20px;
      border-radius: 4px;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    button:hover {
      background-color: #0056b3;
    }

    input[type="file"] {
      margin-right: 10px;
    }

    /* Loading Spinner */
    .loading {
      display: none;
      border: 4px solid #f3f3f3;
      border-radius: 50%;
      border-top: 4px solid #007bff;
      width: 24px;
      height: 24px;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    .loading-container {
      display: flex;
      align-items: center;
      gap: 10px;
    }
  </style>
</head>

<body>
  <header>
    <div class="logo">
      <a href="/"><img src="/assets/img/logo.png" alt="NodCord Logo"></a>
      <span>NodCord</span>
    </div>
    <nav>
      <a href="/">Home</a>
      <a href="/docs">Documentation</a>
      <a href="/status">Status</a>
      <a href="/info">Info</a>
      <a href="/routes">Routes</a>
      <a href="/discord-members">Discord Members</a>
      <a href="/discord-servers">Discord Servers</a>
      <% if (!isAuthenticated) { %>
        <a href="/login">Login</a>
        <a href="/register">Register</a>
      <% } else { %>
        <a href="/dashboard">Dashboard</a>
        <a href="/logout">Logout</a>
      <% } %>
    </nav>
  </header>
  <main>
    <!-- Overview Section -->
    <section>
      <h3>Ãœbersicht</h3>
      <div class="grid-container">
        <div class="grid-item">
          <h4>Beta Keys</h4>
          <p>Anzahl: <%= betaKey.length %></p>
        </div>
        <div class="grid-item">
          <h4>API Keys</h4>
          <p>Anzahl: <%= apiKey.length %></p>
        </div>
        <div class="grid-item">
          <h4>Users</h4>
          <p>Anzahl: <%= users.length %></p>
        </div>
        <div class="grid-item">
          <h4>Roles</h4>
          <p>Anzahl: <%= roles.length %></p>
        </div>
        <div class="grid-item">
          <h4>Categories</h4>
          <p>Anzahl: <%= categories.length %></p>
        </div>
        <div class="grid-item">
          <h4>Tickets</h4>
          <p>Anzahl: <%= tickets.length %></p>
        </div>
        <div class="grid-item">
          <h4>Discord Servers</h4>
          <p>Anzahl: <%= discordServers.length %></p>
        </div>
        <div class="grid-item">
          <h4>Discord Members</h4>
          <p>Anzahl: <%= discordMembers.length %></p>
        </div>
      </div>
    </section>

    <!-- Status Section -->
    <section>
      <h3>System Status</h3>
      <p>API Status: <strong><%= apiStatus %></strong></p>
      <p>Bot Status: <strong><%= botStatus %></strong></p>
      <p>Database Status: <strong><%= dbStatus %></strong></p>
    </section>

    <!-- API Control Section -->
    <section>
      <h3>API Steuerung</h3>
      <div class="loading-container">
        <form id="start-api-form" action="/api/controls/api/start" method="POST">
          <button type="submit" <% if (apiStatus === 'online') { %> disabled <% } %>>API starten</button>
        </form>
        <div id="start-api-loading" class="loading"></div>
      </div>
      <div class="loading-container">
        <form id="stop-api-form" action="/api/controls/api/stop" method="POST">
          <button type="submit" <% if (apiStatus === 'offline') { %> disabled <% } %>>API stoppen</button>
        </form>
        <div id="stop-api-loading" class="loading"></div>
      </div>
      <div class="loading-container">
        <form id="restart-api-form" action="/api/controls/api/restart" method="POST">
          <button type="submit" <% if (apiStatus === 'offline') { %> disabled <% } %>>API neu starten</button>
        </form>
        <div id="restart-api-loading" class="loading"></div>
      </div>
      <div class="loading-container">
        <form id="maintenance-api-form" action="/api/controls/api/maintenance" method="POST">
          <button type="submit" <% if (apiStatus === 'maintenance') { %> disabled <% } %>>API Wartungsmodus aktivieren</button>
        </form>
        <div id="maintenance-api-loading" class="loading"></div>
      </div>
      <div class="loading-container">
        <form id="remove-maintenance-api-form" action="/api/controls/api/remove-maintenance" method="POST">
          <button type="submit" <% if (apiStatus !== 'maintenance') { %> disabled <% } %>>API Wartungsmodus deaktivieren</button>
        </form>
        <div id="remove-maintenance-api-loading" class="loading"></div>
      </div>
    </section>

    <!-- Bot Control Section -->
    <section>
      <h3>Bot Steuerung</h3>
      <div class="loading-container">
        <form id="start-form" action="/api/controls/bot/start" method="POST">
          <button type="submit" <% if (botStatus === 'online' || botStatus === 'maintenance') { %> disabled <% } %>>Bot starten</button>
        </form>
        <div id="start-loading" class="loading"></div>
      </div>
      <div class="loading-container">
        <form id="stop-form" action="/api/controls/bot/stop" method="POST">
          <button type="submit" <% if (botStatus === 'offline' || botStatus === 'maintenance') { %> disabled <% } %>>Bot stoppen</button>
        </form>
        <div id="stop-loading" class="loading"></div>
      </div>
      <div class="loading-container">
        <form id="restart-form" action="/api/controls/bot/restart" method="POST">
          <button type="submit" <% if (botStatus === 'offline' || botStatus === 'maintenance') { %> disabled <% } %>>Bot neu starten</button>
        </form>
        <div id="restart-loading" class="loading"></div>
      </div>
      <div class="loading-container">
        <form id="maintenance-form" action="/api/controls/bot/maintenance" method="POST">
          <button type="submit" <% if (botStatus === 'maintenance') { %> disabled <% } %>>Wartungsmodus aktivieren</button>
        </form>
        <div id="maintenance-loading" class="loading"></div>
      </div>
      <div class="loading-container">
        <form id="remove-maintenance-form" action="/api/controls/bot/remove-maintenance" method="POST">
          <button type="submit" <% if (botStatus !== 'maintenance') { %> disabled <% } %>>Wartungsmodus deaktivieren</button>
        </form>
        <div id="remove-maintenance-loading" class="loading"></div>
      </div>
    </section>

    <!-- File Upload Section -->
    <section>
      <h3>Datei-Uploads</h3>
      <form action="/api/files/upload" method="POST" enctype="multipart/form-data">
        <input type="file" name="file" required>
        <button type="submit">Datei hochladen</button>
      </form>
      <% if (successMessage) { %>
        <div class="alert-success">
          <%= successMessage %>
        </div>
      <% } %>
    </section>

    <!-- System Logs Section -->
    <section>
      <h3>System Logs</h3>
      <div>
        <a href="/dashboard/logs" target="_blank">Logs anzeigen</a>
      </div>
    </section>
  </main>
  <footer>
    <p>&copy; <%= new Date().getFullYear() %> NodCord. Alle Rechte vorbehalten.</p>
  </footer>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('form').forEach(form => {
        form.addEventListener('submit', (event) => {
          const formId = event.target.id;
          document.getElementById(`${formId}-loading`).style.display = 'inline-block';
        });
      });
    });
  </script>
</body>

</html>
