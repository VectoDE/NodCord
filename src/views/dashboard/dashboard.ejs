<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NodCord - Dashboard</title>
  <link rel="shortcut icon" href="/assets/img/logo.png" type="image/x-icon">
  <link rel="stylesheet" href="/assets/css/styles.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" />
  <link rel="stylesheet" href="https://unpkg.com/@merakiui/merakiui/dist/merakiui.min.css" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 text-gray-900 dark:bg-gray-800 dark:text-gray-200 flex">
  <%- include('../partials/header/dashboardHeader'); %>

  <main class="flex-1 ml-64 lg:ml-72 p-6 space-y-8 overflow-auto">
    <!-- Overview Section -->
    <section class="bg-white dark:bg-gray-900 p-6 rounded-lg shadow-lg">
      <h3 class="text-2xl font-semibold mb-4 text-gray-900 dark:text-gray-100">CRUD</h3>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <!-- CRUD Count Cards -->
        <% const cardClasses = 'bg-gray-200 dark:bg-gray-700 p-4 rounded-lg shadow-md text-center'; %>
        <% const titleClasses = 'text-lg font-medium text-gray-900 dark:text-gray-200'; %>
        <% const numberClasses = 'text-xl font-semibold text-gray-800 dark:text-gray-300'; %>
        <%
          const items = [
            { label: 'Users', count: users.length },
            { label: 'Versions', count: versions.length },
            { label: 'Tournaments', count: tournaments.length },
            { label: 'Tickets', count: tickets.length },
            { label: 'Teams', count: teams.length },
            { label: 'Tasks', count: tasks.length },
            { label: 'Tags', count: tags.length },
            { label: 'Subscribers', count: subscribers.length },
            { label: 'Stories', count: stories.length },
            { label: 'Roles', count: roles.length },
            { label: 'Projects', count: projects.length },
            { label: 'Organizations', count: organizations.length },
            { label: 'Issues', count: issues.length },
            { label: 'Groups', count: groups.length },
            { label: 'Games', count: games.length },
            { label: 'Files', count: files.length },
            { label: 'Feedbacks', count: feedbacks.length },
            { label: 'Features', count: features.length },
            { label: 'Favorites', count: favorites.length },
            { label: 'Companies', count: companies.length },
            { label: 'Comments', count: comments.length },
            { label: 'Categories', count: categories.length },
            { label: 'Bugs', count: bugs.length },
            { label: 'Blogs', count: blogs.length },
          ];
        %>
        <% items.forEach(item => { %>
          <div class="<%= cardClasses %>">
            <h4 class="<%= titleClasses %>"><%= item.label %></h4>
            <p class="<%= numberClasses %>">Anzahl: <%= item.count %></p>
          </div>
        <% }); %>
      </div>

      <h3 class="text-2xl font-semibold mb-4 mt-6 text-gray-900 dark:text-gray-100">Keys</h3>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <!-- Keys Count Cards -->
        <div class="<%= cardClasses %>">
          <h4 class="<%= titleClasses %>">Beta Keys</h4>
          <p class="<%= numberClasses %>">Anzahl: <%= betaKey.length %></p>
        </div>
        <div class="<%= cardClasses %>">
          <h4 class="<%= titleClasses %>">API Keys</h4>
          <p class="<%= numberClasses %>">Anzahl: <%= apiKey.length %></p>
        </div>
      </div>

      <h3 class="text-2xl font-semibold mb-4 mt-6 text-gray-900 dark:text-gray-100">Shipping</h3>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <!-- Shipping Count Cards -->
        <div class="<%= cardClasses %>">
          <h4 class="<%= titleClasses %>">Products</h4>
          <p class="<%= numberClasses %>">Anzahl: <%= products.length %></p>
        </div>
        <div class="<%= cardClasses %>">
          <h4 class="<%= titleClasses %>">Customers</h4>
          <p class="<%= numberClasses %>">Anzahl: <%= customers.length %></p>
        </div>
        <div class="<%= cardClasses %>">
          <h4 class="<%= titleClasses %>">Customer Orders</h4>
          <p class="<%= numberClasses %>">Anzahl: <%= customerOrders.length %></p>
        </div>
        <div class="<%= cardClasses %>">
          <h4 class="<%= titleClasses %>">Orders</h4>
          <p class="<%= numberClasses %>">Anzahl: <%= orders.length %></p>
        </div>
        <div class="<%= cardClasses %>">
          <h4 class="<%= titleClasses %>">Payments</h4>
          <p class="<%= numberClasses %>">Anzahl: <%= payments.length %></p>
        </div>
        <div class="<%= cardClasses %>">
          <h4 class="<%= titleClasses %>">Returns</h4>
          <p class="<%= numberClasses %>">Anzahl: <%= returns.length %></p>
        </div>
      </div>

      <h3 class="text-2xl font-semibold mb-4 mt-6 text-gray-900 dark:text-gray-100">Discord</h3>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <!-- Discord Count Cards -->
        <div class="<%= cardClasses %>">
          <h4 class="<%= titleClasses %>">Discord Servers</h4>
          <p class="<%= numberClasses %>">Anzahl: <%= discordServers.length %></p> <!-- Anzahl der Discord-Server -->
        </div>
        <div class="<%= cardClasses %>">
          <h4 class="<%= titleClasses %>">Discord Members</h4>
          <p class="<%= numberClasses %>">Anzahl: <%= discordMembers.length %></p> <!-- Anzahl der Discord-Mitglieder -->
        </div>
      </div>
    </section>

    <!-- Status Section -->
    <section class="bg-white dark:bg-gray-900 p-6 rounded-lg shadow-lg">
      <h3 class="text-2xl font-semibold mb-4 text-gray-900 dark:text-gray-100">System Status</h3>
      <p class="mb-2">API Status: <strong class="text-gray-800 dark:text-gray-300"><%= apiStatus %></strong></p>
      <p class="mb-2">Bot Status: <strong class="text-gray-800 dark:text-gray-300"><%= botStatus %></strong></p>
      <p>Database Status: <strong class="text-gray-800 dark:text-gray-300"><%= dbStatus %></strong></p>
    </section>

    <!-- File Upload Section -->
    <section class="bg-white dark:bg-gray-900 p-6 rounded-lg shadow-lg">
      <h3 class="text-2xl font-semibold mb-4 text-gray-900 dark:text-gray-100">Datei-Upload</h3>
      <form id="upload-form" action="<%= api.https %>://<%= api.baseURL %><% if (process.env.NODE_ENV === 'development') { %>:<%= api.port %><% } %>/api/files/upload" method="POST" enctype="multipart/form-data">
        <div class="mb-4">
          <label for="file" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Datei ausw√§hlen</label>
          <input type="file" id="file" name="file"
            class="mt-1 block w-full text-sm text-gray-900 dark:text-gray-300 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 dark:focus:ring-blue-500 dark:focus:border-blue-500"
            required>
        </div>
        <button type="submit"
          class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 transition duration-300">Hochladen /
          Upload</button>
      </form>
    </section>

    <!-- System Logs Section -->
    <section class="bg-white dark:bg-gray-900 p-6 rounded-lg shadow-lg">
      <h3 class="text-2xl font-semibold mb-4 text-gray-900 dark:text-gray-100">Combined Log (Latests)</h3>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
          <tbody class="bg-white divide-y divide-gray-200 dark:bg-gray-900 dark:divide-gray-700">
            <% loggerLogs.forEach(log => { %>
              <tr>
                <td class="px-6 py-4 text-sm font-medium text-gray-900 dark:text-gray-200"><%= log %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </section>
  </main>

  <script src="/assets/js/script.js"></script>
</body>

</html>
