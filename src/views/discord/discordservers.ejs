<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Discord Servers ~ NodCord</title>
  <link rel="shortcut icon" href="<%= logoImage %>" type="image/x-icon">
  <link rel="stylesheet" href="assets/css/styles.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" />
  <link rel="stylesheet" href="https://unpkg.com/@merakiui/merakiui/dist/merakiui.min.css" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-200 text-gray-900 dark:bg-gray-800 dark:text-gray-200">
  <%- include('./partials/header'); %>
  <main class="p-6">
    <div class="bg-white dark:bg-gray-900 shadow-lg rounded-lg p-6 mb-6">
      <h1 class="text-3xl font-bold mb-4">Discord Servers</h1>
      <div class="mb-6 text-lg">
        <span class="font-semibold">Total Servers:</span>
        <span><%= serverCount %></span>
      </div>
      <div class="flex flex-wrap gap-6">
        <% if (servers.length > 0) { %>
          <% servers.forEach(server => { %>
            <div class="bg-gray-200 dark:bg-gray-800 border border-gray-300 rounded-lg shadow-md p-4 flex flex-col flex-grow basis-1/4">
              <img src="<%= server.icon %>" alt="<%= server.name %>" class="w-full h-32 object-cover rounded-lg mb-4">
              <div>
                <h2 class="text-xl font-semibold mb-2"><%= server.name %></h2>
                <p class="text-base mb-1"><strong>ID:</strong> <%= server.id %></p>
                <p class="text-base mb-1"><strong>Owner:</strong> <%= server.owner %></p>
                <p class="text-base mb-1"><strong>Created At:</strong> <%= server.createdAt.toDateString() %></p>
                <p class="text-base mb-1"><strong>Members:</strong> <%= server.memberCount %></p>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <p class="text-lg">No servers found.</p>
        <% } %>
      </div>
    </div>
  </main>
  <%- include('./partials/footer'); %>
</body>

<script src="/assets/js/script.js"></script>
</html>
