<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Discord Members ~ NodCord</title>
  <link rel="shortcut icon" href="/assets/img/logo.png" type="image/x-icon">
  <link rel="stylesheet" href="/assets/css/styles.css">
  <style>
    .section {
      padding: 20px;
    }

    .server-section {
      margin-bottom: 20px;
      padding: 20px;
      background-color: #fff;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .server-section h2 {
      margin-top: 0;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }

    th, td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: center;
    }

    th {
      background-color: #f4f4f4;
    }

    img.avatar {
      height: 40px;
      width: 40px;
      border-radius: 50%;
    }

    .btn {
      padding: 5px 10px;
      margin: 0 5px;
      border: none;
      border-radius: 4px;
      color: #fff;
      background-color: #007bff;
      cursor: pointer;
      font-size: 14px;
      transition: background-color 0.3s;
    }

    .btn:hover {
      background-color: #0056b3;
    }

    .btn-add {
      background-color: #28a745;
    }

    .btn-add:hover {
      background-color: #218838;
    }
  </style>
</head>

<body>
  <header>
    <div class="logo">
      <a href="/"><img src="/assets/img/logo.png" alt="NodCord Logo" /></a>
      <span>NodCord</span>
    </div>
    <div class="burger">
      <div></div>
      <div></div>
      <div></div>
    </div>
    <nav>
      <div class="close-btn"></div>
      <a href="/">Home</a>
      <a href="/docs">Documentation</a>
      <a href="/status">Status</a>
      <a href="/info">Info</a>
      <a href="/discord-members">Discord Members</a>
      <a href="/discord-servers">Discord Servers</a>
      <% if (!isAuthenticated) { %>
      <a href="/login">Login</a>
      <a href="/register">Register</a>
      <% } else { %>
      <a href="/dashboard">Dashboard</a>
      <a href="/logout">Logout</a>
      <% } %>
    </nav>
  </header>
  <main>
    <div class="section">
      <h1>Discord Members</h1>
      <% if (servers && servers.length > 0) { %>
        <% servers.forEach(server => { %>
          <div class="server-section">
            <h2><%= server.name %></h2>
            <img class="avatar" src="<%= server.icon %>" alt="<%= server.name %>">
            <% if (server.members && server.members.length > 0) { %>
              <table>
                <thead>
                  <tr>
                    <th>Avatar</th>
                    <th>Username</th>
                    <th>Display Name</th>
                    <th>Badges</th>
                    <th>Hashname</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% server.members.forEach(member => { %>
                    <tr>
                      <td><img class="avatar" src="<%= member.avatar %>" alt="<%= member.username %>'s Avatar"></td>
                      <td><%= member.username %></td>
                      <td><%= member.displayName %></td>
                      <td><%= member.badges.join(', ') %></td>
                      <td><%= member.hashname %></td>
                      <td>
                        <a class="btn" href="https://discord.com/users/<%= member.hashname %>" target="_blank">Show</a>
                        <a class="btn btn-add" href="https://discord.com/users/@me" target="_blank" onclick="addFriend('<%= member.username %>', '<%= member.hashname %>')">Add Friend</a>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            <% } else { %>
              <p>Keine Mitglieder gefunden.</p>
            <% } %>
          </div>
        <% }) %>
      <% } else { %>
        <p>Keine Server gefunden.</p>
      <% } %>
    </div>
  </main>
  <footer>
    <p>&copy; <%= new Date().getFullYear() %> <a href="/">NodCord</a>. Alle Rechte vorbehalten.</p>
  </footer>
</body>
<script src="assets/js/script.js"></script>
</html>
