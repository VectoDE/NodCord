<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Discord Members ~ NodCord</title>
  <link rel="shortcut icon" href="/assets/img/logo.png" type="image/x-icon">
  <link rel="stylesheet" href="assets/css/styles.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 text-gray-900">
  <%- include('./partials/header'); %>
  <main class="p-6">
    <div class="bg-white shadow-lg rounded-lg p-6 mb-6">
      <h1 class="text-3xl font-bold mb-4">Discord Members</h1>
      <% if (servers && servers.length > 0) { %>
        <% servers.forEach(server => { %>
          <div class="bg-white shadow-md rounded-lg p-6 mb-6">
            <h2 class="text-2xl font-semibold mb-2"><%= server.name %></h2>
            <img class="w-16 h-16 rounded-full mb-4" src="<%= server.icon %>" alt="<%= server.name %>">
            <% if (server.members && server.members.length > 0) { %>
              <div class="overflow-x-auto">
                <table class="w-full border-collapse mb-4">
                  <thead>
                    <tr class="bg-gray-200 text-gray-800">
                      <th class="border px-2 py-1 sm:px-4 sm:py-2 text-left">Avatar</th>
                      <th class="border px-2 py-1 sm:px-4 sm:py-2 text-left">Username</th>
                      <th class="border px-2 py-1 sm:px-4 sm:py-2 text-left">Display Name</th>
                      <th class="border px-2 py-1 sm:px-4 sm:py-2 text-left">Badges</th>
                      <th class="border px-2 py-1 sm:px-4 sm:py-2 text-left">Hashname</th>
                      <th class="border px-2 py-1 sm:px-4 sm:py-2 text-left">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% server.members.forEach(member => { %>
                      <tr>
                        <td class="border px-2 py-1 sm:px-4 sm:py-2 text-center">
                          <img class="w-10 h-10 rounded-full" src="<%= member.avatar %>" alt="<%= member.username %>'s Avatar">
                        </td>
                        <td class="border px-2 py-1 sm:px-4 sm:py-2 text-center"><%= member.username %></td>
                        <td class="border px-2 py-1 sm:px-4 sm:py-2 text-center"><%= member.displayName %></td>
                        <td class="border px-2 py-1 sm:px-4 sm:py-2 text-center"><%= member.badges.join(', ') %></td>
                        <td class="border px-2 py-1 sm:px-4 sm:py-2 text-center"><%= member.hashname %></td>
                        <td class="border px-2 py-1 sm:px-4 sm:py-2 text-center">
                          <a class="bg-blue-500 text-white px-2 py-1 rounded hover:bg-blue-600 text-sm" href="https://discord.com/users/<%= member.hashname %>" target="_blank">Show</a>
                          <a class="bg-green-500 text-white px-2 py-1 rounded hover:bg-green-600 ml-2 text-sm" href="https://discord.com/users/@me" target="_blank" onclick="addFriend('<%= member.username %>', '<%= member.hashname %>')">Add Friend</a>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            <% } else { %>
              <p class="text-lg">Keine Mitglieder gefunden.</p>
            <% } %>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-lg">Keine Server gefunden.</p>
      <% } %>
    </div>
  </main>
  <%- include('./partials/footer'); %>
</body>

<script src="/assets/js/script.js"></script>
</html>
