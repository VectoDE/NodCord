<ul class="divide-y divide-gray-200 list-group">
  <% reviews.forEach(review => { %>
    <li class="py-4 flex justify-between items-center list-group-item d-flex justify-content-between align-items-center">
      <span><%= review.title %></span>
      <span class="bg-red-500 text-white rounded-full px-3 py-1 badge badge-danger rounded-pill">Rating: <%= review.rating %></span>
    </li>
  <% }) %>
</ul>
