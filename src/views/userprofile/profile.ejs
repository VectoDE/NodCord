<!DOCTYPE html>
<html lang="de">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title><%= user.username %>'s Profile ~ NodCord</title>
		<link rel="shortcut icon" href="<%= logoImage %>" type="image/x-icon" />
		<link rel="stylesheet" href="/assets/css/styles.css" />
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css"
		/>
		<link
			rel="stylesheet"
			href="https://unpkg.com/@merakiui/merakiui/dist/merakiui.min.css"
		/>
		<script src="https://cdn.tailwindcss.com"></script>
	</head>

	<body
		class="bg-gray-200 text-gray-900 dark:bg-gray-800 dark:text-gray-200 flex flex-col min-h-screen"
	>
		<%- include('../partials/header'); %>

		<main class="flex-1 flex flex-col">
			<header class="relative">
				<div
					class="w-full h-32 bg-gray-300 dark:bg-gray-700 rounded-lg overflow-hidden z-10"
				>
					<img
						src="<%= user.thumbnail %>"
						alt="<%= user.fullName %>'s Thumbnail"
						class="w-full h-full object-cover"
					/>
				</div>

				<div class="absolute top-3/4 left-12 transform -translate-y-1/2">
					<img
						src="<%= user.profilePicture %>"
						alt="<%= user.fullName %>'s Profile Picture"
						class="w-32 h-32 rounded-full border-4 border-white shadow-lg"
					/>
				</div>

				<div class="ml-52 mt-6">
					<div class="flex flex-col lg:flex-row lg:items-center">
						<!-- User Name, Username, Bio -->
						<div class="flex-1 mb-4 lg:mb-0">
							<h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100">
								<%= user.fullName %>
							</h1>
							<p class="text-lg text-gray-600 dark:text-gray-400">
								@<%= user.username %>
							</p>
							<p class="text-base text-gray-500 dark:text-gray-300 mt-2">
								<%= user.bio %>
							</p>
						</div>

						<div class="flex items-center space-x-4 mr-12">
							<!-- Social Links -->
							<div class="flex space-x-4 mx-4">
								<% if (user.socialLinks.twitter) { %>
								<a
									href="<%= user.socialLinks.twitter %>"
									target="_blank"
									class="text-blue-500 hover:text-blue-700"
								>
									<i class="bi bi-twitter"></i>
								</a>
								<% } %> <% if (user.socialLinks.linkedin) { %>
								<a
									href="<%= user.socialLinks.linkedin %>"
									target="_blank"
									class="text-blue-700 hover:text-blue-900"
								>
									<i class="bi bi-linkedin"></i>
								</a>
								<% } %> <% if (user.socialLinks.github) { %>
								<a
									href="<%= user.socialLinks.github %>"
									target="_blank"
									class="text-gray-800 hover:text-gray-900 dark:text-gray-400"
								>
									<i class="bi bi-github"></i>
								</a>
								<% } %> <% if (user.socialLinks.website) { %>
								<a
									href="<%= user.socialLinks.website %>"
									target="_blank"
									class="text-green-500 hover:text-green-700"
								>
									<i class="bi bi-globe"></i>
								</a>
								<% } %>
							</div>

							<div class="flex items-center space-x-4">
								<% if (currentUser) { %> <% if (currentUser._id.toString()
								!==user._id.toString()) { %> <% if
								(Array.isArray(currentUser.following) &&
								currentUser.following.includes(user._id.toString())) { %>
								<form action="/unfollow/<%= user._id %>" method="POST">
									<button
										type="submit"
										class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600"
									>
										Entfolgen
									</button>
								</form>
								<% } else { %>
								<form action="/follow/<%= user._id %>" method="POST">
									<button
										type="submit"
										class="bg-green-600 text-white px-4 py-2 rounded hover:bg-blue-600"
									>
										Folgen
									</button>
								</form>
								<% } %> <% } else { %>
								<form action="/user/profile/<%= user.username %>/edit" method="GET">
									<button
										type="submit"
										class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600"
									>
										Bearbeiten
									</button>
								</form>
								<% } %> <% } %>

								<a
									href="mailto:<%= user.email %>"
									class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600"
								>
									Kontaktieren
								</a>
							</div>
						</div>
					</div>
				</div>

				<div class="absolute top-0 right-8 flex space-x-2 mt-2">
					<% if (user.isBetaTester) { %>
					<span
						class="inline-flex items-center bg-green-100 text-green-800 text-sm font-medium px-2.5 py-0.5 rounded"
					>
						<i class="bi bi-star-fill mr-1"></i> Beta Access
					</span>
					<% } %> <% if (user.role) { %>
					<span
						class="inline-flex items-center text-sm font-medium px-2.5 py-0.5 rounded <% if (user.role === 'admin') { %> bg-red-100 text-red-800 <% } else if (user.role === 'moderator') { %> bg-yellow-100 text-yellow-800 <% } else if (user.role === 'developer') { %> bg-blue-100 text-blue-800 <% } else if (user.role === 'content') { %> bg-purple-100 text-purple-800 <% } else if (user.role === 'supporter') { %> bg-teal-100 text-teal-800 <% } else if (user.role === 'premium') { %> bg-pink-100 text-pink-800 <% } else if (user.role === 'vip') { %> bg-indigo-100 text-indigo-800 <% } else if (user.role === 'user') { %> bg-gray-100 text-gray-800 <% } %>"
					>
						<% if (user.role==='admin' ) { %>
						<i class="bi bi-shield-check mr-1"></i> Admin <% } else if
						(user.role==='moderator' ) { %>
						<i class="bi bi-shield mr-1"></i> Moderator <% } else if
						(user.role==='developer' ) { %>
						<i class="bi bi-braces mr-1"></i> Developer <% } else if
						(user.role==='content' ) { %>
						<i class="bi bi-file-text mr-1"></i> Content <% } else if
						(user.role==='supporter' ) { %>
						<i class="bi bi-heart mr-1"></i> Supporter <% } else if
						(user.role==='premium' ) { %> <i class="bi bi-gem mr-1"></i> Premium
						<% } else if (user.role==='vip' ) { %>
						<i class="bi bi-crown mr-1"></i> VIP <% } else if
						(user.role==='user' ) { %>
						<i class="bi bi-person-circle mr-1"></i> User <% } %>
					</span>
					<% } %>
				</div>
			</header>

			<nav class="my-6">
				<ul class="flex justify-center space-x-4">
					<li>
						<a
							href="?tab=posts"
							class="text-gray-700 dark:text-gray-300 px-4 py-2 hover:text-yellow-500 <%= currentTab === 'posts' ? 'font-semibold border-b-2 border-yellow-500' : '' %>"
							>Posts</a
						>
					</li>
					<li>
						<a
							href="?tab=projects"
							class="text-gray-700 dark:text-gray-300 px-4 py-2 hover:text-yellow-500 <%= currentTab === 'projects' ? 'font-semibold border-b-2 border-yellow-500' : '' %>"
							>Projects</a
						>
					</li>
					<li>
						<a
							href="?tab=friends"
							class="text-gray-700 dark:text-gray-300 px-4 py-2 hover:text-yellow-500 <%= currentTab === 'friends' ? 'font-semibold border-b-2 border-yellow-500' : '' %>"
							>Friends</a
						>
					</li>
				</ul>
			</nav>

			<div class="flex-1 p-6">
				<% if (currentTab==='posts' ) { %>
				<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
					<% posts.forEach(post=> { %>
					<div class="bg-white dark:bg-gray-800 p-4 rounded-lg shadow-md">
						<h3 class="text-xl font-semibold mb-2"><%= post.title %></h3>
						<p class="text-gray-600 dark:text-gray-400 mb-2">
							<%= post.description %>
						</p>
						<p class="text-sm text-gray-500 dark:text-gray-400 mb-2">
							By <span class="font-medium"> <%= post.author %> </span> on <%=
							new Date(post.createdAt).toLocaleDateString() %>
						</p>
						<div class="mb-2">
							<% post.tags.forEach(tag=> { %>
							<span
								class="inline-block bg-gray-200 dark:bg-gray-600 text-gray-700 dark:text-gray-300 text-xs px-2 py-1 rounded-full mr-2 mb-1"
							>
								#<%= tag %>
							</span>
							<% }) %>
						</div>
						<a
							href="/post/<%= post._id %>"
							class="text-blue-500 hover:underline"
							>Read more</a
						>
					</div>
					<% }) %>
				</div>
				<% } else if (currentTab==='projects' ) { %>
				<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
					<% projects.forEach(project=> { %>
					<div class="bg-white dark:bg-gray-800 p-4 rounded-lg shadow-md">
						<h3 class="text-xl font-semibold mb-2"><%= project.title %></h3>
						<p class="text-gray-600 dark:text-gray-400 mb-2">
							<%= project.description %>
						</p>
						<a
							href="/project/<%= project._id %>"
							class="text-blue-500 hover:underline"
							>View project</a
						>
					</div>
					<% }) %>
				</div>
				<% } else if (currentTab==='friends' ) { %>
				<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
					<% friends.forEach(friend=> { %>
					<div class="bg-white dark:bg-gray-800 p-4 rounded-lg shadow-md">
						<div class="flex items-center mb-4">
							<img
								src="<%= friend.profilePicture %>"
								alt="<%= friend.fullName %>'s Profile Picture"
								class="w-12 h-12 rounded-full border-2 border-white shadow-md mr-4"
							/>
							<div>
								<h3 class="text-lg font-semibold"><%= friend.fullName %></h3>
								<p class="text-sm text-gray-600 dark:text-gray-400">
									@<%= friend.username %>
								</p>
							</div>
						</div>
						<a
							href="/profile/<%= friend._id %>"
							class="text-blue-500 hover:underline"
							>View profile</a
						>
					</div>
					<% }) %>
				</div>
				<% } %>
			</div>
		</main>

		<%- include('../partials/footer'); %>

		<script src="/assets/js/script.js"></script>
	</body>
</html>
