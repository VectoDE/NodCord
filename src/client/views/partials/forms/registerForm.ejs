<form action="/register" method="post" class="space-y-4">
  <div class="flex flex-col">
    <label for="name" class="text-gray-700">Name</label>
    <input type="text" id="name" name="name" class="border border-gray-300 rounded-md p-2 form-control" required>
  </div>
  <div class="flex flex-col">
    <label for="email" class="text-gray-700">Email address</label>
    <input type="email" id="email" name="email" class="border border-gray-300 rounded-md p-2 form-control" required>
  </div>
  <div class="flex flex-col">
    <label for="password" class="text-gray-700">Password</label>
    <input type="password" id="password" name="password" class="border border-gray-300 rounded-md p-2 form-control" required>
  </div>
  <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md btn btn-primary">Register</button>
</form>
