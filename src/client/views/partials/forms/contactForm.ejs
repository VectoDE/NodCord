<form action="/contact" method="post" class="space-y-4">
  <div class="flex flex-col">
    <label for="name" class="text-gray-700">Name</label>
    <input type="text" id="name" name="name" class="border border-gray-300 rounded-md p-2 form-control" required>
  </div>
  <div class="flex flex-col">
    <label for="email" class="text-gray-700">Email address</label>
    <input type="email" id="email" name="email" class="border border-gray-300 rounded-md p-2 form-control" required>
  </div>
  <div class="flex flex-col">
    <label for="message" class="text-gray-700">Message</label>
    <textarea id="message" name="message" class="border border-gray-300 rounded-md p-2 form-control" rows="4" required></textarea>
  </div>
  <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md btn btn-primary">Send</button>
</form>
