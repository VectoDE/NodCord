<ul class="divide-y divide-gray-200 list-group">
  <% categories.forEach(category => { %>
    <li class="py-4 flex justify-between items-center list-group-item d-flex justify-content-between align-items-center">
      <span><%= category.name %></span>
      <span class="bg-teal-500 text-white rounded-full px-3 py-1 badge badge-info rounded-pill">Items: <%= category.item_count %></span>
    </li>
  <% }) %>
</ul>
