<% if (user.tournaments && user.tournaments.length) { %>
  <div class="inline-flex space-x-2 mt-2">
    <% user.tournaments.forEach(tournament => { %>
      <a href="<%= tournament.url %>" target="_blank" class="inline-flex items-center text-sm font-medium px-2.5 py-0.5 rounded"
        style="background-image: url('<%= tournament.thumbnailUrl %>'); background-size: cover; background-position: center; color: white; text-decoration: none;">
        <% if (tournament.logoUrl) { %>
          <img src="<%= tournament.logoUrl %>" alt="<%= tournament.name %>" class="w-5 h-5 mr-1 rounded-full">
        <% } %>
        <span class="truncate bg-black bg-opacity-50 px-2 py-1 rounded">
          <%= tournament.name %>
        </span>
      </a>
      <span class="inline-flex items-center justify-center text-sm font-medium px-3 py-1 rounded
        <% if (tournament.position === '1st Place') { %>
          bg-yellow-500 text-white
        <% } else if (tournament.position === '2nd Place') { %>
          bg-gray-300 text-white
        <% } else if (tournament.position === '3rd Place') { %>
          bg-orange-400 text-white
        <% } else { %>
          bg-gray-500 text-white
        <% } %>
        ">
        <%= tournament.position %>
      </span>
    <% }); %>
  </div>
<% } %>
