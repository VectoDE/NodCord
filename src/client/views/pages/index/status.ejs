<!DOCTYPE html>
<html lang="de">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Status ~ NodCord</title>
  <link rel="shortcut icon" href="/assets/img/logo.png" type="image/x-icon">
  <link rel="stylesheet" href="assets/css/styles.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" />
  <link rel="stylesheet" href="https://unpkg.com/@merakiui/merakiui/dist/merakiui.min.css" />
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    .status-dot {
      width: 30px;
      height: 30px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
    }
  </style>
</head>

<body class="bg-gray-200 text-gray-900 dark:bg-gray-800 dark:text-gray-200">
  <%- include('../partials/header/header'); %>

  <main>
    <!-- Hero Section -->
    <section class="bg-cover bg-center h-64 flex items-center justify-center" style="background-image: url('/assets/img/hero-bg.jpg');">
      <div class="text-center">
        <h1 class="text-4xl font-bold text-white">System Status</h1>
        <p class="text-lg text-gray-200 mt-2">Live status of our services</p>
      </div>
    </section>

    <!-- Status Overview Section -->
    <section class="py-12 bg-white dark:bg-gray-900">
      <div class="container mx-auto px-6">
        <!-- API Status -->
        <div class="mb-12">
          <h2 class="text-2xl font-semibold text-gray-800 dark:text-white mb-4 border-b border-gray-200 dark:border-gray-700 pb-2">
            API Status
          </h2>
          <div class="flex items-center">
            <div class="status-dot <%= apiStatus %> bg-gray-500 mr-4">
              <% if (apiStatus === 'online') { %>
                <i class="bi bi-check-circle text-white"></i>
              <% } else if (apiStatus === 'maintenance') { %>
                <i class="bi bi-exclamation-circle text-white"></i>
              <% } else if (apiStatus === 'offline') { %>
                <i class="bi bi-x-circle text-white"></i>
              <% } %>
            </div>
            <span class="text-lg text-gray-800 dark:text-gray-400"><%= apiStatusMessage || 'Unknown' %></span>
          </div>
        </div>

        <!-- Database Status -->
        <div class="mb-12">
          <h2 class="text-2xl font-semibold text-gray-800 dark:text-white mb-4 border-b border-gray-200 dark:border-gray-700 pb-2">
            Database Status
          </h2>
          <div class="flex items-center">
            <div class="status-dot <%= dbStatus %> bg-gray-500 mr-4">
              <% if (dbStatus === 'online') { %>
                <i class="bi bi-check-circle text-white"></i>
              <% } else if (dbStatus === 'maintenance') { %>
                <i class="bi bi-exclamation-circle text-white"></i>
              <% } else if (dbStatus === 'offline') { %>
                <i class="bi bi-x-circle text-white"></i>
              <% } %>
            </div>
            <span class="text-lg text-gray-800 dark:text-gray-400"><%= dbStatusMessage || 'Unknown' %></span>
          </div>
        </div>

        <!-- Discord Bot Status -->
        <div class="mb-12">
          <h2 class="text-2xl font-semibold text-gray-800 dark:text-white mb-4 border-b border-gray-200 dark:border-gray-700 pb-2">
            Discord Bot Status
          </h2>
          <div class="flex items-center">
            <div class="status-dot <%= botStatus %> bg-gray-500 mr-4">
              <% if (botStatus === 'online') { %>
                <i class="bi bi-check-circle text-white"></i>
              <% } else if (botStatus === 'maintenance') { %>
                <i class="bi bi-exclamation-circle text-white"></i>
              <% } else if (botStatus === 'offline') { %>
                <i class="bi bi-x-circle text-white"></i>
              <% } %>
            </div>
            <span class="text-lg text-gray-800 dark:text-gray-400"><%= botStatusMessage || 'Unknown' %></span>
          </div>
        </div>

      </div>
    </section>
  </main>

  <%- include('../partials/footer/footer'); %>
  <script src="/assets/js/script.js"></script>
</body>

</html>
