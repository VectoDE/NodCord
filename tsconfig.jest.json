{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./.tmp/tests",
    "types": ["node", "jest", "jest-extended", "testing-library__jest-dom"],
    "noEmit": false,
    "incremental": false,
    "declaration": false,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "prisma/**/*.ts",
    "tests/**/*.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "jest.setup.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
